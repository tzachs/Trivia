<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttonNewGameSimpleText"
        android:layout_above="@id/buttonNewGameAllQuestions"
        android:id="@+id/buttonNewGameSimple"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttonNewGameAllQuestionsText"
        android:layout_centerInParent="true"
        android:id="@+id/buttonNewGameAllQuestions"
        android:visibility="invisible"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/buttonNewGameCategoriesText"
        android:layout_below="@id/buttonNewGameAllQuestions"
        android:id="@+id/buttonNewGameCategories"
        android:visibility="invisible"
        />

</RelativeLayout>