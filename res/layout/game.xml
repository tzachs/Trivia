<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewLivesLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textViewLivesLeftText" />

    <TextView
        android:id="@+id/textViewGameScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/textViewGameScoreLabel" />

    <TextView
        android:id="@+id/textViewGameScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewGameScoreLabel"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewGameScoreLabel"
        android:text="" />

    <TextView
        android:id="@+id/textViewTimesPlayedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="@string/textViewTimesPlayedTitleText"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textViewTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textViewLivesLeft"
        android:text="@string/textViewTimeTitleText"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTimeTitle"
        android:layout_alignRight="@+id/textViewTimeTitle"
        android:layout_below="@+id/textViewTimeTitle"
        android:gravity="center"
        android:text="@string/textViewTimeText"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewNumberOfQuestionsLeftTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewTimeTitle"
        android:gravity="center"
        android:text="@string/textViewNumberOfQuestionsLeftTitle"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewNumberOfQuestionsLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewNumberOfQuestionsLeftTitle"
        android:layout_alignRight="@+id/textViewNumberOfQuestionsLeftTitle"
        android:layout_below="@+id/textViewNumberOfQuestionsLeftTitle"
        android:gravity="center"
        android:text="@string/zero"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewQuestionDifficultyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewNumberOfQuestionsLeftTitle"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/textViewQuestionDifficultyTitle"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewQuestionDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewQuestionDifficultyTitle"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/zero"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/textViewQuestionText"
            android:textSize="22dp" />

        <Button
            android:id="@+id/buttonAnswer1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/buttonAnswer1" />

        <Button
            android:id="@+id/buttonAnswer2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/buttonAnswer1" />

        <Button
            android:id="@+id/buttonAnswer3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/buttonAnswer1" />

        <Button
            android:id="@+id/buttonAnswer4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/buttonAnswer1" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonPassQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonReportMistakeInQuestion"
        android:layout_margin="4dp"
        android:text="@string/pass"
        android:visibility="gone" />

    <Button
        android:id="@+id/buttonReportMistakeInQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"
        android:background="@drawable/custom_menu_button"
        android:text="@string/buttonReportMistakeInQuestion" />

</RelativeLayout>