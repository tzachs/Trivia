<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonGameTypeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/custom_menu_button"
        android:text="@string/all" />

    <Button
        android:id="@+id/buttonGameTypeLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/buttonGameTypeAll"
        android:background="@drawable/custom_menu_button"
        android:text="@string/levels" />
    
    <Button
        android:id="@+id/buttonGameTypeCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/buttonGameTypeLevel"
        android:background="@drawable/custom_menu_button"
        android:text="@string/category" />
    
    <Button
        android:id="@+id/buttonGameTypeSoviet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toRightOf="@+id/buttonGameTypeCategory"
        android:background="@drawable/custom_menu_button"
        android:text="@string/soviet" />
    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonGameTypeAll"
        android:orientation="vertical" >

        <TableLayout
            android:id="@+id/tableLayoutHighScores"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="true"
            android:stretchColumns="true" >

            <TableRow
                android:id="@+id/tableRowHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="@string/number_sign"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="@string/user"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="@string/score"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="@string/type"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="@string/date"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</RelativeLayout>